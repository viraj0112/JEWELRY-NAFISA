import 'package:flutter/material.dart';
import 'package:jewelry_nafisa/src/admin/models/enhanced_admin_models.dart';

class TopPerformingPostsWidget extends StatelessWidget {
  final List<TopPost> posts;

  const TopPerformingPostsWidget({
    super.key,
    required this.posts,
  });

  @override
  Widget build(BuildContext context) {
    return Card(
      elevation: 2,
      shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12)),
      child: Padding(
        padding: const EdgeInsets.all(24),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                const Text(
                  'Top Performing Posts',
                  style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                ),
                const Spacer(),
                _buildPeriodSelector(),
              ],
            ),
            const SizedBox(height: 16),
            if (posts.isEmpty)
              const Center(
                child: Padding(
                  padding: EdgeInsets.all(32),
                  child: Column(
                    children: [
                      Icon(Icons.trending_up, size: 48, color: Colors.grey),
                      SizedBox(height: 16),
                      Text(
                        'No posts data available',
                        style: TextStyle(color: Colors.grey),
                      ),
                    ],
                  ),
                ),
              )
            else
              _buildPostsList(),
          ],
        ),
      ),
    );
  }

  Widget _buildPeriodSelector() {
    return PopupMenuButton<String>(
      icon: const Icon(Icons.calendar_today, size: 18),
      onSelected: (value) {
        // TODO: Handle period change
      },
      itemBuilder: (context) => [
        const PopupMenuItem(value: 'today', child: Text('Today')),
        const PopupMenuItem(value: 'week', child: Text('This Week')),
        const PopupMenuItem(value: 'month', child: Text('This Month')),
      ],
    );
  }

  Widget _buildPostsList() {
    return ListView.separated(
      shrinkWrap: true,
      physics: const NeverScrollableScrollPhysics(),
      itemCount: posts.length,
      separatorBuilder: (context, index) => const Divider(height: 1),
      itemBuilder: (context, index) {
        final post = posts[index];
        return _buildPostTile(post, index);
      },
    );
  }

  Widget _buildPostTile(TopPost post, int index) {
    return ListTile(
      contentPadding: const EdgeInsets.symmetric(vertical: 8),
      leading: Container(
        width: 40,
        height: 40,
        decoration: BoxDecoration(
          color: _getSourceColor(post.source).withOpacity(0.1),
          borderRadius: BorderRadius.circular(8),
        ),
        child: Icon(
          post.source == 'scraped' ? Icons.web : Icons.palette,
          color: _getSourceColor(post.source),
          size: 20,
        ),
      ),
      title: Text(
        post.title,
        style: const TextStyle(fontWeight: FontWeight.w500),
        maxLines: 2,
        overflow: TextOverflow.ellipsis,
      ),
      subtitle: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text('${post.category} â€¢ ${post.source}'),
          const SizedBox(height: 4),
          Row(
            children: [
              _buildStatChip(Icons.visibility, '${post.views}', Colors.blue),
              const SizedBox(width: 8),
              _buildStatChip(Icons.unlock, '${post.unlocks}', Colors.orange),
              const SizedBox(width: 8),
              _buildStatChip(Icons.bookmark_border, '${post.saves}', Colors.green),
            ],
          ),
        ],
      ),
      trailing: IconButton(
        icon: const Icon(Icons.more_vert),
        onPressed: () => _showPostActions(post),
      ),
    );
  }

  Widget _buildStatChip(IconData icon, String value, Color color) {
    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 6, vertical: 2),
      decoration: BoxDecoration(
        color: color.withOpacity(0.1),
        borderRadius: BorderRadius.circular(12),
      ),
      child: Row(
        mainAxisSize: MainAxisSize.min,
        children: [
          Icon(icon, size: 12, color: color),
          const SizedBox(width: 2),
          Text(
            value,
            style: TextStyle(fontSize: 10, color: color, fontWeight: FontWeight.w500),
          ),
        ],
      ),
    );
  }

  Color _getSourceColor(String source) {
    switch (source.toLowerCase()) {
      case 'scraped':
        return Colors.blue;
      case 'b2b':
      case 'b2b_upload':
        return Colors.purple;
      default:
        return Colors.grey;
    }
  }

  void _showPostActions(TopPost post) {
    // TODO: Show post actions menu
  }
}